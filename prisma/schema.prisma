generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// produtos a serem cadastrados
model Produtos {
  id String @id @unique @default(uuid())
  tipo String
  item String @unique 
  descricao String
  quantidade Int
  entrada DateTime @default(now())
  operador String

  custos CustoProduto[]
  @@map("produtos")
}

model CustoProduto {
  id String @id @unique @default(uuid())
  custo_unitario Float
  margem_de_lucro Float
  produtos Produtos @relation(fields: [item_id], references: [id])
  
  item_id String 

  @@map("custos")
}