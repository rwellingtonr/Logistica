generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// produtos a serem cadastrados
model Produto {
  id String @id @default(uuid())
  tipo String
  item String @unique
  descricao String
  quantidade Int
  entrada DateTime @default(now())

  

  
  custos CustoProduto[]
  vendas Venda[]
  @@map("produtos")
}

model CustoProduto {
  id String @id @default(uuid())
  custo_unitario Float
  margem_de_lucro Float
  
  produto Produto @relation(fields: [produto_id], references: [id])
  produto_id String
  
  colaborador Colaborador @relation(fields: [colaborador_id], references: [id])
  colaborador_id String

  @@map("custos")
}

model Colaborador{
  id String @id @default(uuid())
  nome String 
  sobrenome String?
  funcao String
  turno String @default("ADM")
  email String @unique


  custos CustoProduto[]
  vendas Venda[]
  @@map("colaboradore")
}

model Venda{
  id String @id @default(uuid())
  cliente String 
  receita_bruta Float
  receita_liquida Float

  produto Produto @relation(fields: [produto_id], references: [id])
  produto_id String

  colaborador Colaborador @relation(fields: [colaborador_id], references: [id])
  colaborador_id String

  @@map("venda")
}